{
    "manifest_version": 3,
    "name": "YouNotes",
    "version": "1.0",
    "description": "Take notes while watching YouTube videos.",
    "icons": {
      "128": "icon.png"
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "128": "icon.png"
      }
    },
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["index.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  